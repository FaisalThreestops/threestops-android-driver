<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpTwenty"
        android:layout_marginRight="@dimen/dpTwenty"
        android:paddingBottom="@dimen/dpFifteen"
        android:paddingTop="@dimen/dpFifteen"
        android:weightSum="2">

        <TextView
            android:id="@+id/reasonTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dpTen"
            android:paddingLeft="@dimen/dpTen"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_weight="1.8"/>

        <RadioButton
            android:layoutDirection="rtl"
            android:id="@+id/radioBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dpFive"
            android:layout_marginLeft="@dimen/dpFive"
            android:button="@drawable/ic_check_off"
            android:textSize="@dimen/spTwelve"
            android:layout_weight="0.2"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpOne"
        android:background="@color/colorwildsand" />

</LinearLayout>