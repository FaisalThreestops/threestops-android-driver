<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvOpenCloseStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/athensGray"
        android:paddingBottom="@dimen/dpTen"
        android:paddingLeft="@dimen/dpSixteen"
        android:paddingRight="@dimen/dpSixteen"
        android:paddingTop="@dimen/dpTen"
        android:text="@string/helpSend"
        android:textColor="@color/colorMineShaft"
        android:textSize="@dimen/spFourteen"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dpSixteen">

        <TextView
            android:id="@+id/tvHelpText"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_circle"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="A"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/spTwelve"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/tvHelpSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dpTen"
            android:layout_marginStart="@dimen/dpTen"
            android:layout_toEndOf="@+id/tvHelpText"
            android:layout_toRightOf="@+id/tvHelpText"
            android:layout_toLeftOf="@id/tvHelpTime"
            android:layout_toStartOf="@id/tvHelpTime"
            android:text="@string/helpSubject"
            android:textColor="@color/colorMineShaft"
            android:textSize="@dimen/spTwelve"
            android:gravity="start"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/tvHelpDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHelpSubject"
            android:layout_marginLeft="@dimen/dpTen"
            android:layout_marginStart="@dimen/dpTen"
            android:layout_toEndOf="@+id/tvHelpText"
            android:layout_toRightOf="@+id/tvHelpText"
            android:textSize="@dimen/spTwelve"/>

        <TextView
            android:id="@+id/tvHelpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/spTwelve"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/idView"
            android:layout_below="@+id/tvHelpDate"
            android:layout_marginTop="@dimen/dpSixteen"
            android:background="@color/colorDoveGray"/>
    </RelativeLayout>

</LinearLayout>